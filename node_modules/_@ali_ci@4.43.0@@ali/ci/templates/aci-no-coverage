beforeScript:
  - |
    export PATH=$PWD/node_modules/.bin:$HOME/.npm_global/tnpm/bin:$PATH
    echo $PATH
    time curl -v -L -o- https://bash-scripts.antfin-inc.com/install-tnpm-standalone.js | bash
    tnpm -v

{%- for item in versions %}
{{item.name}}-{{item.version}}:
  stage: test
  aciTags: DOCKER
  agent:
    docker:
      image: {{image}}
      resourceRequirements:
        cpu: {{resource.cpu}}
        memory: {{resource.memory}}
        ephemeral-storage: {{resource.storage}}
  script:
    - |
      export PATH=$PWD/node_modules/.bin:$HOME/.npm_global/tnpm/bin:$PATH
      {%- if environments and environments.MYSQL_DATABASE %}
      sh /home/admin/bin/start_mysql.sh
      {%- endif %}
      time tnpm i --install-{{item.name}}={{item.version}} --no-cache
      node -e "console.log('%j, %j', process.versions, process.execPath)"
      time tnpm run {{command}}
{%- else %}
