beforeScript:
  - |
    export PATH=$PWD/node_modules/.bin:$HOME/.npm_global/tnpm/bin:$PATH
    echo $PATH
    time curl -v -L -o- https://bash-scripts.antfin-inc.com/install-tnpm-standalone.js | bash
    tnpm -v
{%- if tengine %}
    yum install -y -b current t-alipay-tengine-1.5.3
{%- endif %}
{%- if obproxy %}
    /opt/taobao/install/obproxy/bin/obproxyd.sh -c start -e offline -n chair_test
{%- endif %}

